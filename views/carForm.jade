extends layout

block content
    div(style="display: grid; place-items: center; margin-bottom: 10em;")
      form(action="#" method="post" style="display: flex; flex-direction: column; gap: 1em; align-items:center;")  
        input(type="text" name="model" placeholder="Model Name" required)
        label(for="company")= "Company" 
        select(name="company" required)
            each company in companies 
                option(value=company.name)= company.name
        label(for="type")= "Type" 
        select(name="type" required)
            each type in types 
                option(value=type.name)= type.name  
        input(type="number" name="stock" placeholder="Inventory" required)
        input(type="number" name="maxSpeed" placeholder="Max Speed")
        input(type="number" name="horsepower" min="900" placeholder="Horsepower")
        input(type="number" name="year" min="1890" max=`${new Date().getUTCFullYear()}` placeholder="Year")
        input(type="text" name="imgUrl" placeholder="Image Url")
        button(class="btn btn-success mb-4")= "Create"
      a(class="btn btn-primary mb-4" href=`${car.url || "/cars"}`)= "Back"